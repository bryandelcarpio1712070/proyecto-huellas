@model P_Perdidos;

<div class="card bg-dark text-white">
  <img src="https://revistapetmi.com/wp-content/uploads/2019/02/noticia-1549509125-mascotas-extraviadas-nueva-serie-national-geographic.png" class="card-img" alt="..."style=" height: 500px" >
  <div class="card-img-overlay">
    <div style="margin:0 auto" class="text-center"><h1 class="card-title">Publicar Mascota perdida</h1></div> 

	<div class="panel-heading">
						<div class="row">
							<div class="col-xs-6">
							</div>
						</div>
						<hr>
</div>
<form asp-action="registro" method="post">
    <div asp-validation-summary="All"></div>
  
  <div class="form-group row">
    <label for="staticEmail" class="col-sm-2 col-form-label">Numero telefonico</label>
    <div class="col-sm-5">
    <input type="text" class="form-control" asp-for="NumTelefono" id="numero" aria-describedby="emailHelp" placeholder="ingrese su numero de telefono">
    </div>
  </div>
  <div class="form-group row">
    <label for="staticEmail" class="col-sm-2 col-form-label">Imagen</label>
    <div class="col-sm-5">
    <input type="text" class="form-control" asp-for="Imagen" id="Imagen" aria-describedby="emailHelp" placeholder="direccion de la foto de la mascota">
    </div>
  </div>



  <div class="form-group row,col-sm-1 ">
    <label for="exampleFormControlTextarea1">Descripcion</label>
    <textarea class="form-control" asp-for="Descripcion" id="Descripcion" rows="3"placeholder="ingrese las caracteristicas que crea necesarias"></textarea>
  </div>
<div class="form-group">
	<div class="text-center">
		<div class="col-md-6 col-md-offset-3" style="margin:0 auto">
			<input type="submit" name="register" id="register" tabindex="4" class="form-control btn btn-primary" value="Agregar"/>
		</div>
	</div>
</div>  
</form>
  </div>
</div>
